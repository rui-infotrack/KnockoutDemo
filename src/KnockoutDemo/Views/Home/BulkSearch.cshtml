<table>
	<thead>
        <tr>
        	<th>Number</th>
        	<th>Name</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: entries, bulk: { canAdd: 'isValid', addNew: addNew }">
        <tr>
            <td>
            	<input data-bind="textInput: number" />
            </td>
            <td data-bind="text: name"></td>
        </tr>
    </tbody>
</table>

<script>
    var OrganisationViewModel = function() {
    	this.number = ko.observable();
    	this.name = ko.observable();
    	this.isValid = ko.computed(function() {
    		return (this.number() || '').trim();
    	}.bind(this));
    };

	var ListViewModel = function() {
		this.entries = ko.observableArray([new OrganisationViewModel()]);
		this.addNew = function() {
			return new OrganisationViewModel();
		};
	};

	ko.applyBindings(new ListViewModel());
</script>
